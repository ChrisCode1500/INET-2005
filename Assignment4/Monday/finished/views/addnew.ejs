<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="addnew.js" type="text/javascript"></script>
        <title>Movies!</title>
    </head>
    <body class="bg-dark text-white p-4">
        <p>Add New Movie</p>

        <div class="card m-2 text-dark">
            <div class="card-header">
                New Movie:
            </div>            
            <div class="card-body">
                <!-- reference: https://www.w3schools.com/js/js_validation.asp -->
                <form name="addnew" method="POST" action="people" onsubmit="return validateForm()">
                    <p>First Name <span style="color: red; font-weight: bold;">*</span><br/>
                        <input name="first_name"/>
                    </p>
                    <p>Last Name <span style="color: red; font-weight: bold;">*</span><br/>
                        <input name="last_name"/>
                    </p>
                    <p>Age <span style="color: red; font-weight: bold;">*</span><br/>
                        <input name="age"/>
                    </p>
                    
                    <p>
                        <input type="submit" value="Save!"/>
                    </p>        
                </form>
            </div>
        </div>
        <br/>
        <div>
            <a href="/">back to search</a>
        </div>
        <br/>
    </body>
</html>